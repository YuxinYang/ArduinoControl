<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="arduinocontroller.arduinocontroller.ledControl"
    android:orientation="vertical">


        <TextView
            android:id="@+id/txt_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="39dp"
            android:gravity="center"
            android:text="Hallo"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

    <ToggleButton
        android:id="@+id/btn_blue"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_alignStart="@+id/btn_green"
        android:layout_below="@+id/txt_view"
        android:layout_marginTop="45dp"
        android:background="@android:color/holo_blue_dark"
        android:backgroundTint="@android:color/holo_blue_dark"
        android:text="ToggleButton"
        android:textOff="on"
        android:textOn="off"
        android:layout_gravity="center"/>

    <ToggleButton
            android:id="@+id/btn_green"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_marginTop="30dp"
            android:background="@android:color/holo_green_dark"
            android:text="ToggleButton"
            android:textOff="on"
            android:textOn="off"
            android:layout_below="@+id/btn_blue"
            android:layout_alignStart="@+id/btn_red"
        android:layout_gravity="center"/>


        <ToggleButton
            android:id="@+id/btn_red"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_below="@+id/btn_green"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:background="@android:color/holo_red_dark"
            android:text="ToggleButton"
            android:textOff="on"
            android:textOn="off"
            android:layout_gravity="center"/>

        <Button
            android:id="@+id/btn_disconnect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="35dp"
            android:layout_marginEnd="26dp"
            android:text="Disconnect"
            android:layout_gravity="right"/>
</LinearLayout>
